@model IEnumerable<StoreApplication.Models.ProductStore>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AmountInStock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Store.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AmountInStock)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Store.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { storeId = item.StoreId, productId = item.ProductId }) |
            @Html.ActionLink("Details", "Details", new { storeId = item.StoreId, productId = item.ProductId }) |
            @Html.ActionLink("Delete", "Delete", new { storeId = item.StoreId, productId = item.ProductId })
        </td>
    </tr>
}

</table>
