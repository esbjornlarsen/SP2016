@model List<Product>

<div class="row">
    @foreach (Product prod in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="data:image/svg+xml;base64," alt="...">
                <div class="caption">
                    <h3>@prod.Name</h3>
                    <p>Bacon ipsum Lorem this is a cool description</p>
                    <p><a href="#" class="btn btn-primary" role="button">Buy</a> <a href="#" class="btn btn-default" role="button">Compare</a></p>
                </div>
            </div>
        </div>
    }
</div>



